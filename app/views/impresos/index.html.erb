<% provide(:title, "Juegos impresos") %>

  <section id="main-content">

    <section class="wrapper site-min-height">
      <!-- /.col-lg-12 -->
      <div class="row mt">
        <div class="col-lg-12">
          <div class="content-panel">
            <h4>Listado de juegos impresos</h4>
              <section id="unseen">
                <table class="table table-striped table-bordered table-condensed">
                  <thead>
                    <tr>
                      <th>Fecha</th>
                      <th>Quiniela</th>
                      <th>Quini ex</th>
                      <th>Loteria online</th>
                      <th>Otros juegos</th>
                      <th>Otros gastos</th>
                      <th>Premios</th>
                      <th>Subagencia</th>
                      <th>Total</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @impresos.each do |impreso| %>
                      <% total_quiniela = impreso.quiniela - (impreso.quiniela * 15 /  100) %>
                      <% total_express = impreso.quini_ex - (impreso.quini_ex * 8 /  100) %>
                      <% total_loteria = impreso.loteria_online - (impreso.loteria_online * 16 /  100) %>
                      <% total_juegos = impreso.otros_juegos - (impreso.otros_juegos * 10 /  100) %>
                      <% total = (total_quiniela + total_express + total_loteria + total_juegos + impreso.otros_gastos) - impreso.premios %>
                      <tr>
                        <td><%= impreso.fecha %></td>
                        <td><%= impreso.quiniela %></td>
                        <td><%= impreso.quini_ex %></td>
                        <td><%= impreso.loteria_online %></td>
                        <td><%= impreso.otros_juegos %></td>
                        <td><%= impreso.otros_gastos %></td>
                        <td><%= impreso.premios %></td>
                        <td><%= impreso.subagencia.numero_subagencia %></td>
                        <td><%= total %></td>
                        <td><%= link_to 'Ver', [impreso.subagencia, impreso] %></td>
                        <td><%= link_to 'Eliminar', [impreso.subagencia, impreso], method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </section>
            </div>
          </div>
        </div>
      </section>

    </section>
